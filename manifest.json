{
  "manifest_version": 3,
  "name": "chorus",
  "version": "1.0",
  "description": "Compare LLMs in their native browser UI.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "omnibox": {
    "keyword": "ch"
  },
  "permissions": [
    "tabs",
    "storage",
    "tabGroups"
  ],
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["gemini-content.js"]
    }
  ],
  "options_page": "options.html"
} 